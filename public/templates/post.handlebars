                                    id="#p-subcomments-form" method="post" class="hidden">
                                    <textarea class="p-ccf-content" name="content" id="content-sub" required></textarea>
                                    <input id="p-toggle-sub-comment" type="submit" value="SUBMIT" class="p-replay-btn p-ccf-btn" {{#if ../isLogged}} title="You need registration or login for comment:"
