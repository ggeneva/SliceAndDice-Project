<div class="g-app-container p-page">
    <p class="p-selected-item">Home &#8811; {{post.category}} &#8811; <b>{{{post.title}}}</b></p>
    <br>
    <div class="p-page-content">
        <div class="p-page-block p-single-post-size">
            <div class="p-single-post p-border">
                <aside class="p-post-info">
                    <section class="p-post-image-container">
                        <div class="p-post-category">
                            {{post.category}}
                        </div>
                        <img class="p-post-image" src="{{post.image}}">
                        <div class="p-post-date">
                            <span>{{post.monthOfCreation}}</span>
                            <span>{{post.dayOfCreation}}</span>
                        </div>
                    </section>
                    <section class="p-post-tags-container">
                        <h3>TAGS</h3>
                        {{#each post.tags}}
                        <div>{{this}}</div>
                        {{/each}}
                    </section>
                    <section class="p-post-related-posts">
                        <h3>RELATED POSTS</h3>
                        <ul class="g-reset">
                            <li><a><img src="../images/li-icon.png">Say hi to the world</a></li>
                            <li><a><img src="../images/li-icon.png">New car on the street!!!</a></li>
                            <li><a><img src="../images/li-icon.png">Browse channels only here</a></li>
                        </ul>
                    </section>
                    <section class="p-post-share">
                        <h3>SHARE THIS</h3>
                        <div class="p-post-share-img">
                        <span><a><img src="../images/twitter-icon.png"></a></span>
                        <span><a><img src="../images/facebook-icon.png"></a></span>
                        <span><a><img src="../images/middle-icon.png"></a></span>
                        <span><a><img src="../images/reddit-icon.png"></a></span>
                        </div>
                    </section>
                </aside>
                <article class="p-post-content">
                    <h2>{{post.title}}</h2>
                    <h3>POSTED BY {{post.author}} in {{post.category}} | {{counter}} COMMENTS</h3>
                    <div class="p-post-line"></div>
                    <div class="p-post-content-text">
                        {{{post.content}}}
                    </div>
                </article>
            </div>
            <div class="p-post-comments-container">
                <div class="p-post-comments-container-padding  p-border">
                    <h2> {{counter}} COMMENTS</h2>
                    <div class="p-post-line"></div>
                    <div class="p-post-comments">
