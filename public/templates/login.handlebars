<div class="container g-app-container ">
    <div class="row r-page">
        <form action="#/login" id="login-form" method="post" onsubmit="$('#l-loading').show();">
            <div class="form-group">
                <span class="label label-danger"></span>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Email Address" required  title="Write your email.">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required  title="Whrite your pssword.">
            </div>

            <div class="form-group">
                <input type="submit" class="btn g-btn btn-submit-form" value="LOGIN">
                <div id="l-loading" style="display:none;"><img src="../images/Reload.gif" alt="" />Submitting...</div>
            </div>
        </form>
    </div>
</div>